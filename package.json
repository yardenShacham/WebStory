{
	"name": "WebStory",
	"version": "1.0.0",
	"description": "Library for building tours on your front page (Step-by-step guide and feature introduction)",
	"author": "Yarden Shacham <yarden101111@gmail.com>",
	"license": "MIT",
	"main": "index.js",
	"jsnext:main": "index.es.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/yardenShacham/WebStory"
	},
	"keywords": [
		"Step",
		"Step-by-step",
		"tours",
		"guide",
		"feature introduction"
	],
	"bugs": {
		"url": "https://github.com/yardenShacham/WebStory/issues",
		"email": "yarden101111@gmail.com"
	},
	"babel": {
		"presets": [
			"latest",
			"stage-0"
		],
		"plugins": [
			"transform-runtime"
		]
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"extends": "airbnb-base"
	},
	"scripts": {
		"lint": "eslint src test tools",
		"test": "mocha --timeout 15000 --compilers js:babel-register -r ignore-styles -r tools/test-modules/html-ignore src/**/*.spec.js",
		"test:watch": "mocha --compilers js:babel-register --reporter min --watch",
		"test:cover": "babel-node ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha",
		"coveralls": "cat ./coverage/lcov.info | coveralls",
		"build": "node tools/build",
		"start": "easystatic start docs"
	},
	"dependencies": {},
	"devDependencies": {
		"babel-cli": "^6.24.1",
		"babel-core": "^6.25.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-register": "^6.24.1",
		"chai": "^4.1.0",
		"chai-as-promised": "^7.1.1",
		"coveralls": "^2.11.14",
		"del": "^2.2.2",
		"eslint": "^3.8.0",
		"eslint-config-airbnb-base": "^10.0.1",
		"eslint-plugin-import": "^2.2.0",
		"ignore-styles": "^5.0.1",
		"istanbul": "^1.1.0-alpha.1",
		"jsdom": "^9.0.0",
		"mocha": "^3.4.2",
		"mocha-jsdom": "^1.1.0",
		"rollup": "^0.36.4",
		"rollup-plugin-html": "^0.2.1",
		"rollup-plugin-sass": "^0.5.3",
		"rollup-plugin-string": "^2.0.2",
		"rollup-plugin-typescript": "^0.8.1",
		"rollup-plugin-uglify": "^2.0.1",
		"sinon": "^2.3.8",
		"ts-node": "^3.2.0",
		"uglify-es": "^3.0.25",
		"uglifycss": "0.0.27"
	}
}
